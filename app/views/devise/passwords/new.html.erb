<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :email, for: 'email', class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email,
        class: "form-control",
        id: "email",
        placeholder:"email",
        autofocus: true
      %>
    </div>
  </div>
  <br><br><br>
  <div class="form-group">
    <%= f.submit "Reset password", class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
