<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, for: 'email', class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email,
        class: "form-control",
        id: "email",
        placeholder:"email",
        autofocus: true
      %>
    </div>
  </div>
  <br><br><br>
  <div class="form-group">
    <%= f.label :password, for: 'password', class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password,
        class: "form-control",
        id: "password",
        placeholder:"password",
        autofocus: "off"
      %>
    </div>
  </div>
  <br><br>
  <div class="form-group">
    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>
  </div>
  <div class="form-group">
    <%= f.submit "Sign in", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
