<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, for: 'email', class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email,
        class: "form-control",
        id: "email",
        placeholder:"email",
        autofocus: true
      %>
    </div>
  </div>
  <br><br><br>
  <div class="form-group">
    <%= f.label :password, for: 'password', class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password,
        class: "form-control",
        id: "password",
        placeholder:"password",
        autofocus: "off"
      %>
    </div>
  </div>
  <br><br>
  <div class="form-group">
    <%= f.label :password_confirmation,
      for: 'password_confirmation',
      class: "col-sm-1 control-label"
    %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation,
        class: "form-control",
        id: "password",
        placeholder:"password confirmation",
        autofocus: "off"
      %>
    </div>
  </div>
  <br><br>
  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
