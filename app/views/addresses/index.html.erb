<% if @addresses.present? %>
  <h1>Listing Addresses</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Frist name</th>
        <th>Last name</th>
        <th>Appartment #</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip code</th>
        <th>Phone number</th>
        <th colspan="3">Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.first_name %></td>
          <td><%= address.last_name %></td>
          <td><%= address.appartment_number %></td>
          <td><%= address.street %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.zip_code %></td>
          <td><%= address.phone_number %></td>
          <td><%= link_to 'Show', address %></td>
          <td><%= link_to 'Edit', edit_address_path(address) %></td>
          <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% else %>
<div class="jumbotron">
  <h4>No addresses found</h4>
</div>
<% end %>
<%= link_to 'Add New Address', new_address_path, class: "btn btn-primary btn-lg"%>